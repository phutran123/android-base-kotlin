<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationStyle">
        <!-- Background color -->
        <item name="android:background">#1976D2</item>

        <!-- Active text and icon color -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="itemIconTint">#FFFFFF</item>

        <!-- Active text appearance -->
        <item name="itemTextAppearanceActive">@style/BottomNavigation.ActiveText</item>

        <!-- Inactive text color -->
        <item name="itemTextAppearanceInactive">@style/BottomNavigation.InactiveText</item>
    </style>

    <style name="BottomNavigation.ActiveText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigation.InactiveText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#80FFFFFF</item>
        <item name="android:textSize">12sp</item>
    </style>

    <declare-styleable name="TitleSection">
        <attr name="sectionTitle" format="string" />
        <attr name="seeAllText" format="string" />
    </declare-styleable>

</resources>